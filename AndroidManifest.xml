<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhoujanr.NewsTweets"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <permission android:name="com.zhoujanr.NewsTweets.SEND_TIMELINE_NOTIFICATIONS" 
        		android:label="@string/send_timeline_notifications_permission_label"
        		android:description="@string/send_timeline_notifications_permission_description"
				android:permissionGroup="android.permission-group.PERSONAL_INFO"
				android:protectionLevel="normal" />
    <permission android:name="com.zhoujanr.NewsTweets.RECEIVE_TIMELINE_NOTIFICATIONS"
				android:label="@string/receive_timeline_notifications_permission_label"
				android:description="@string/receive_timeline_notifications_permission_description"
				android:permissionGroup="android.permission-group.PERSONAL_INFO"
				android:protectionLevel="normal" />

    
	<uses-permission android:name="com.zhoujanr.NewsTweets.SEND_TIMELINE_NOTIFICATIONS" />
	<uses-permission android:name="com.zhoujanr.NewsTweets.RECEIVE_TIMELINE_NOTIFICATIONS" />
    
        
    
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/twitter"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".YamaApplication" >
        
        <service 
            android:name="com.zhoujanr.NewsTweets.UpdateService" />
        
        <activity 
            android:name=".TimelineActivity"
            android:label="@string/titleTimeline">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
                  
        </activity>
        
        <activity
            android:name="com.zhoujanr.NewsTweets.StatusActivity"
            android:label="@string/titleStatus" >
        </activity>
        
        <activity 
            android:name=".PrefsActivity" 
            android:label="@string/titlePrefs">
            
        </activity>
        
        <receiver android:name=".BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        
        <receiver android:name=".NetworkReceiver">
            <intent-filter>
                <action android:name = "android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        
    </application>
    

</manifest>
